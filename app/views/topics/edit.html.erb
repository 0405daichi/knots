<header class="edit-head">
<div class="edit-nav">
  投稿編集ページ
</div>
</header>

<div class="topic-main">
  <%= form_with model: @topic, class: 'form',  local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>
  
  <div class="edit-name">
    <div class="topic_name">
    題名
    </div>
    <%= f.text_area :topic_name, class:"topic-name" %>
  <div>

  <div class="edit-content">
    <div class="topic_content">
    内容
    </div>
    <%= f.text_area :topic_content, class:"topic-content"%>
  </div>

  <div class="topic_btn">
    <%= f.submit "変更する", class: "change-btn" %>
  </div>
  <% end %>
</div>