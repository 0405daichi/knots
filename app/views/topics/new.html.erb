<header class="new-head">
<div class="new-nav">
  新規投稿ページ
</div>
</header>

<div class="topic-main">
  <%= form_with model: @topic, class: 'form',  local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>
  
  <div class="new-topic">
  題名
  </div>
  <%= f.text_area :topic_name, class:"topic-name" %>
  
  <div class="new-topic">
  内容
  </div>
  <%= f.text_area :topic_content, class:"topic-content"%>

  <div class="topic-btn">
    <%= f.submit "投稿する", class: "send_btn" %>
  </div>
  <% end %>
</div>