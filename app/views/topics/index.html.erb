<%= render "shared/header" %>

<div class="topics">
  <% @topics.each do |topic| %>
    <div class="topic">
      <div class="upper-topic">
        <%= link_to topic_path(topic.id), class: 'name' do %>
          <h2><%= topic.topic_name %></h2>
        <% end %>
      </div>
    </div>

    <div class="users">
      <div class="user">
        <p class="five">投稿者:<%= topic.user.name %></p>
      </div>
    </div>

  <% end %>
  <%= render "shared/footer" %>
</div>

