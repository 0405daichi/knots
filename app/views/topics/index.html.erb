<%= render "header" %>
<div class="topics">
  <% @topics.each do |topic| %>
    <div class="topic">
      <%= link_to topic_path(topic.id) do %>
        <div class="upper-topic">
          <div class="topic-content">
          <%= topic.topic_name %>
          </div>
        </div>
      <% end %>

      <div class="lower-topic">
        <div class="topic-user">
          <%= topic.user.name %>
        </div>
        <div class="topic-date">
          <%= topic.created_at %>
        </div>
      </div>
    </div>
  <% end %>
</div>